{{#if updateCommentForm}}
  <p>update {{comment.author}}'s comment</p>
  <div>
    <form>
      <div class="form-group">
        <label for="author">author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
          <label for="content">Content</label>
          {{input value=content id="content"}}
      </div>
      <button class="btn btn-primary" {{action 'update' comment}}>Save</button>
    </form>
  </div>
  {{else}}
  <button class="btn btn-warning"{{action 'updateCommentForm'}}>Update Comment</button>
{{/if}}
