<h1>{{blog.title}}</h1>
<p>{{blog.content}}</p>
<p>{{blog.link}}</p>
<p>posted by {{blog.author}} on {{blog.date}}</p>

{{new-comment blog=blog saveComment='saveComment'}}

<ul>
  <h3>Comments</h3>
  <hr>
  {{#each blog.comments as |comment|}}
    <strong>{{comment.author}}</strong><br>
    {{comment.content}}<br>
    <br>
    {{update-comment comment=comment update="update"}}
    <button class="btn btn-danger"{{action 'deleteComment' comment}}>Delete</button>
    <br>
    <hr>
  {{/each}}
</ul>
