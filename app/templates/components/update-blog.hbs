{{#if updateBlogForm}}
<h1>Update {{blog.title}}</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content"}}
      </div>
      <div class="form-group">
        <label for="link">Link</label>
        {{input value=link id="link"}}
      </div>
      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date"}}
      </div>
      <button {{action 'update' blog}}>Save</button>
    </form>
  </div>
  {{else}}
    <button class="btn btn-primary" {{action 'updateBlogForm'}}>Update</button>
  {{/if}}
